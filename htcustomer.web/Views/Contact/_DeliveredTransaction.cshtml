@model IEnumerable<htcustomer.service.ViewModel.Transaction.TransactionViewModel>

<div class="panel panel-default">
    <div class="panel-heading" data-toggle="collapse" data-target="#delivered-panel" aria-expanded="false">
        History - Delivered &nbsp;<span class="badge">@Model.Count()</span>
    </div>
    <div class="panel-body" id="delivered-panel">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Device</th>
                    <th>Error</th>
                    <th>Receive</th>
                    <th>Deliver</th>
                    <th>Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var transaction in Model)
                {
                    <tr>
                        <td>
                            @transaction.Status
                        </td>
                        <td>
                            <p>@transaction.Category.Name</p>
                            <p>@transaction.Description</p>
                        </td>
                        <td>
                            <p>@transaction.Error</p>
                        </td>
                        <td>
                            @transaction.RecievedDate.Value.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @transaction.DeliveredDate.Value.ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            @transaction.Price
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

