@model htcustomer.service.ViewModel.Contact.ContactDetailsViewModel
@{
    ViewBag.Title = "Contact";
}
<style>
    .customer-contact {
        width: 18rem;
        padding-left: 15px;
        border-bottom: 1px solid #ddd;
    }

    tr.fixed-status {
        border-left: 5px solid #449d44;
    }    
    tr.notfix-status {
        border-left: 5px solid #ec971f
    }
    tr.cannotfix-status {
        border-left: 5px solid #c9302c;
    }
    p.notfix-status {
        color: #ec971f; 
        font-weight:bold;
    }
    p.fixed-status {
        color: #449d44;
        font-weight: bold;
    }
    p.cannotfix-status {
        color: #c9302c;
        font-weight: bold;
    }
    
</style>
<!-- Modal -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Contact</h4>
            </div>
            @using (Html.BeginForm("AddCustomer", "Contact"))
            {
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" placeholder="Customer Name" name="Name">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" class="form-control" id="phone" placeholder="Phone" name="Phone">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" placeholder="Address" name="Address">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" class="form-control" id="description" placeholder="Description" name="Description">
                </div>
            </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Add</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>

             }

        </div>
    </div>
</div>
<div class="col-md-4">
    <div class="row">
        <form class="navbar-form" role="search" id="customer-search-form">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search" name="searchCustomer">
                <div class="input-group-btn">
                    <button class="btn btn-default" type="submit" data-url="/htcustomer/Contact/GetAddressBook/">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <div id="customer-search-result">
        <div id="loading-customer" style="position: relative;width: 70%;display:none;">
            <img src="~/Content/Images/loading-sm.gif"
                 style="width: 100px; height: 100px;margin: 0 auto;position: absolute;top: 15rem;left: 0;right: 0;" />
        </div>
        @Html.Action("GetAddressBook", "Contact")
    </div>
</div>
<div class="col-md-8">
    <div class="row">
        <button class="btn btn-info" data-toggle="modal" data-target="#myModal" style="float:right;">
            <i class="fa fa-plus"></i> &nbsp New Contact
        </button>
    </div>
    @if (Model == null)
    {
        <h1>There are no customer was Selected</h1>
    }
    else
    {        
        <div class="row" style="border-bottom:1px solid #ddd; margin-bottom: 20px;">
            <div class="col-md-6">
                <i class="fa fa-2x fa-address-book"></i>&nbsp;&nbsp;<h2 style="display:inline-block">@Model.Customer.Name.ToUpper()</h2><br />
                <i class="fa fa-2x fa-flag"></i>&nbsp;&nbsp;<h4 style="display:inline-block">@Model.Customer.Description</h4>                
            </div>
            <div class="col-md-6">
                <i class="fa fa-2x fa-phone"></i>&nbsp;&nbsp;&nbsp;<h2 style="color:#737070; display:inline-block">@Model.Customer.Phone</h2><br />
                <i class="fa fa-2x fa-address-book"></i>&nbsp;&nbsp;&nbsp;<h4 style="display:inline-block">@(Model.Customer.Address ?? "Empty")</h4>
            </div>
        </div>
        <div class="row">                                
            @Html.Partial("_WaitingDeliver", Model.WaitingDeliver)
            @Html.Partial("_NotFixTransaction", Model.NotFixTransaction)     
            @Html.Partial("_DeliveredTransaction",Model.DeliveredTransaction)            
        </div>
    }
</div>
@section scripts {
    <script src="~/Scripts/MyScript/contact/contact.js"></script>
}