@model htcustomer.service.ViewModel.Transaction.TransactionHomeViewModel

<div class="list-group-item">
    <div class="panel">
        <div class="panel-heading">
            <div class="col-md-6">
                <div>@Model.Category.Name</div>
                <div>@Model.Customer.Name - (@Model.Customer.Phone)</div>
                <hr />
            </div>
            
            <div class="col-md-6 text-right">                
                <button class="btn btn-sm btn-primary">
                    <i class="fa fa-check"></i>
                </button>
                <button class="btn btn-sm btn-danger">
                    <i class="fa fa-stop"></i>
                </button>
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="col-md-2"><i class="fa fa-bug"></i></div>
                <div class="col-md-10">
                    @Model.Error
                </div>                                
            </div>
            <div class="col-md-12">
                <div class="col-md-2"><i class="fa fa-sticky-note"></i></div>                
                <div class="col-md-10">
                    @Model.DeviceDescription
                </div>                
            </div>
        </div>
    </div>
</div>

