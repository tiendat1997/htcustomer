@model htcustomer.service.ViewModel.Transaction.TransactionHomeViewModel

<div class="list-group-item" id="transaction-detail-@Model.TransactionID">
    <div class="panel">
        <div class="panel-heading">
            <div class="col-md-6">
                <div>@Model.Category.Name</div>
                <div>@Model.Customer.Name - (@Model.Customer.Phone)</div>
                <hr />
            </div>            
            <div class="col-md-6 text-right">
                <button class="btn btn-sm btn-success btn-deliver-transaction" data-id="@Model.TransactionID" data-url="@Url.Action("DeliverTransaction","Device",new { transactionId=Model.TransactionID})"><i class="fa fa-send"></i></button>
            </div>
        </div>
        <div class="panel-body">
            <div class="col-md-12">
                <div class="col-md-2">
                    <i class="fa fa-money"></i>
                </div>
                <div class="col-md-10">
                    <a data-toggle="collapse" data-target="#price-details"><b>@Model.Price</b></a>
                    <div id="price-details" class="collapse">
                        @Html.Partial("_DetailPriceTransaction", Model.ListPriceDetail)
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="col-md-2"><i class="fa fa-bug"></i></div>
                <div class="col-md-10">@Model.Error</div>
            </div>
            <div class="col-md-12">
                <div class="col-md-2"><i class="fa fa-sticky-note"></i></div>
                <div class="col-md-10">@Model.DeviceDescription</div>
            </div>
        </div>
    </div>        
</div>

