@model IEnumerable<htcustomer.service.ViewModel.Transaction.TransactionViewModel>
@{
    ViewBag.Title = "FixedDevice";
}
@section styles {
    @Styles.Render("~/Content/css/device")
}

<div class="col-md-12">
    @Html.Action("PartialTabs", "Device")
    @Html.Action("PartialFilter", "Device")
</div>
<div class="col-md-12">
    <div class="panel">
        <div class="panel-heading">

        </div>
        <div class="panel-body">
            <table class="table table-responsive table-striped">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Device</th>
                        <th>Error</th>
                        <th>Customer</th>
                        <th>Contact</th>
                        <th>Received Date</th>
                        <th>Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var transaction in Model)
                    {
                        <tr>
                            <td>
                                <button class="btn btn-success"><i class="fa fa-send"></i></button>
                            </td>
                            <td>
                                <p>@transaction.Category.Name</p>
                                <p>@transaction.Description</p>
                            </td>
                            <td>
                                @transaction.Error
                            </td>
                            <td>
                                <p>@transaction.Customer.Name</p>
                            </td>
                            <td>
                                <p>@transaction.Customer.Phone</p>
                            </td>
                            <td>
                                @transaction.RecievedDate
                            </td>
                            <td>
                                <p><b>@transaction.Price,000 vnd</b></p>
                                @Html.Partial("_DetailPriceTransaction", transaction.ListPriceDetail)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/Scripts/js/device")
}

