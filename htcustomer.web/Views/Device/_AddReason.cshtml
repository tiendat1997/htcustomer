@model int

@using (Html.BeginForm("AddReasonForCannotFix", "Device", FormMethod.Post, new { id = $"popover-cannotfix-{Model}" }))
{
    <div class="form-group">
        @Html.Hidden("transactionId", @Model, new { @class = "form-control"})
        @Html.TextArea("reason", new { @class = "form-control", required = "required", placeholder = "Reason why cannot fix" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save" />
        <button type="button" class="btn btn-danger" data-dismiss="popover">Close</button>
    </div>
}

