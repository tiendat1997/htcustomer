@model IEnumerable<htcustomer.service.ViewModel.Category.CategoryViewModel>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- New Category Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">New Category</h4>
            </div>
            <div class="modal-body">
                <form action="Category/Add" method="post">
                    <div class="form-group">
                        <label for="name">Category Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Category Name" name="Name" required>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Trigger the modal with a button -->
<div class="col-md-12" style="margin-bottom: 20px;">
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
        <i class="fa fa-plus"></i>&nbsp; New Category
    </button>
</div>
<div class="col-md-12">
    <div class="panel">
        <div class="panel-body">
            <table class="table table-responsive table-striped" cellspacing="10">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var count = 0;
                        foreach (var category in Model)
                        {

                            <tr id="@category.CategoryID">
                                <td>@(++count)</td>
                                <td class="td-category-name-@category.CategoryID">@category.Name</td>
                                <td>
                                    <button class="btn btn-sm btn-primary btn-edit-category" data-id="@category.CategoryID"><i class="fa fa-edit"></i></button>
                                    <button class="btn btn-sm btn-danger btn-delete-category" data-id="@category.CategoryID"><i class="fa fa-remove"></i></button>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/MyScript/category/category.js"></script>
}